{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Barista Coordinator",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildBaristaCoordinator",
      "program": "${workspaceRoot}/Barista.Coordinator/bin/Debug/netcoreapp2.0/Barista.Coordinator.dll",
      "args": [],
      "cwd": "${workspaceRoot}/Barista.Coordinator",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "CoffeeShop Saga",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildCoffeeShopSaga",
      "program": "${workspaceRoot}/CoffeeShop.Saga/bin/Debug/netcoreapp2.0/CoffeeShop.Saga.dll",
      "args": [],
      "cwd": "${workspaceRoot}/CoffeeShop.Saga",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "CoffeeShop API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildCoffeeShopApi",
      "program": "${workspaceFolder}/CoffeeShop.Api/bin/Debug/netcoreapp2.0/CoffeeShop.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CoffeeShop.Api",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "launchBrowser": {
        "enabled": false,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}