  "version": "0.2.0",
  "configurations": [
    {
      "name": "Barista API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildBaristaApi",
      "program": "${workspaceRoot}/Barista.Api/bin/Debug/netcoreapp2.0/Barista.Api.dll",
      "args": [],
      "cwd": "${workspaceRoot}/Barista.Api",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Barista Coordinator",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildBaristaCoordinator",
      "program": "${workspaceRoot}/Barista.Coordinator/bin/Debug/netcoreapp2.0/Barista.Coordinator.dll",
      "args": [],
      "cwd": "${workspaceRoot}/Barista.Coordinator",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "CS_Environment": "Development"
      }
    },
    {
      "name": "CoffeeShop Saga",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildCoffeeShopSaga",
      "program": "${workspaceRoot}/CoffeeShop.Saga/bin/Debug/netcoreapp2.0/CoffeeShop.Saga.dll",
      "args": [],
      "cwd": "${workspaceRoot}/CoffeeShop.Saga",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "CS_Environment": "Development"
      }
    },
    {
      "name": "CoffeeShop API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildCoffeeShopApi",
      "program": "${workspaceFolder}/CoffeeShop.Api/bin/Debug/netcoreapp2.0/CoffeeShop.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CoffeeShop.Api",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}